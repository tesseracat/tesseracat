{
  "name": "iotame",
  "version": "0.1.0",
  "description": "The iotame Home Automation Software",
  "main": "dist/index.js",
  "bin": {
    "iotame": "bin/run"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext ts,js --ignore-pattern dist .",
    "build": "tsc",
    "build:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotame/iotame.git"
  },
  "author": "Christopher MÃ¼hl <christopher@padarom.xyz>",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/iotame/iotame/issues"
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "./tests/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)$": "<rootDir>/src/$1",
      "^@config$": "<rootDir>/src/config"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tests/tsconfig.json"
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/server/*"
    ]
  },
  "homepage": "https://github.com/iotame/iotame#readme",
  "dependencies": {
    "@types/chai": "^4.2.11",
    "@types/sinon-chai": "^3.2.3",
    "consola": "^2.11.3",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "mkdirp": "^1.0.3",
    "nuxt": "^2.11.0",
    "oclif": "^1.15.2",
    "pify": "^5.0.0"
  },
  "devDependencies": {
    "@iotame/eslint-config": "^1.0.2",
    "@nuxt/types": "^0.6.4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/jest": "^25.1.4",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/mkdirp": "^1.0.0",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^13.9.1",
    "@types/pify": "^3.0.2",
    "@types/rmfr": "^2.0.0",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "jest": "^25.1.0",
    "mock-fs": "^4.11.0",
    "rmfr": "^2.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
